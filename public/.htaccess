<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /public/
    
    # Permitir archivos espec√≠ficos directamente
    RewriteRule ^deploy\.php$ deploy.php [L]
    RewriteRule ^debug_login\.php$ debug_login.php [L]
    RewriteRule ^generate_hash\.php$ generate_hash.php [L]
    
    # Permitir archivos y directorios reales
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Resto de solicitudes van a index.php
    RewriteRule ^(.*)$ index.php [L,QSA]
</IfModule>
