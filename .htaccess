<IfModule mod_rewrite.c>
    RewriteEngine On

    # Usar public/index.php como DirectoryIndex si aplica
    DirectoryIndex index.php index.html public/index.php

    # Redirección explícita de la URL raíz a /public/ (externa)
    RewriteCond %{REQUEST_URI} ^/?$
    RewriteRule ^$ /public/ [R=302,L]

    # Redirigir URL raíz explícitamente a public/index.php
    RewriteCond %{REQUEST_URI} ^/?$
    RewriteRule ^$ public/index.php [L]

    # Evitar bucles si ya estamos en /public
    RewriteCond %{REQUEST_URI} !^/public/

    # Si el archivo o directorio no existe en la raíz, enviar a /public
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>
